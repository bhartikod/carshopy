<div class="card" style="width: 18rem; height: 350px;">
    <% @cars.each do |car| %>
    <% if car.images.attached? %> 
        <% car.images.each do |image| %>
        <%= image_tag image %>
        <% end %>
    <% end %> 
    </div>
  <div class="card-body" style="width: 18rem;">
    <ul class="list-group list-group-flush">
    <li><a href="<%= cars_path(car) %>">
        <li class="list-group-item"><%= car.brand%>
        <li class="list-group-item"><%= car.model%>
        <li class="list-group-item"><%= car.price%>
        </a>
     </li> 
     <div>
     <%= button_to "Like", car_likes_path(car.id), method: :post, class: "btn btn-success"%>
        <%= car.likes.count %><br><br>
          <% if @like.present? %>
            <% button_to "Dislike", car_like_path(car.id, like.id),class: "btn btn-success",method: :delete %>
          <%end%><br>
     </div>     
     <div>
        <%= link_to raw("<i class=\"icon-search icon-white\">Enquiry</i>"), 
          new_enquiry_path, class: "btn btn-success"%>
    </div>
    <div>
        <%= link_to raw("<i class=\"icon-search icon-white\">Review</i>"), 
           new_rating_path,class: "btn btn-success"%>
    </div>
  <% end %>
  </ul>
    
  </div>
  </div>
</div>
